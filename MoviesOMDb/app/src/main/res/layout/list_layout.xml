<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/dpng"
        android:id="@+id/imageItemView1"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"/>
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:id="@+id/textItemView1" app:layout_constraintStart_toEndOf="@+id/imageItemView1"
        android:layout_marginStart="96dp" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"/>
</android.support.constraint.ConstraintLayout>